{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/cifp.schema.json",
  "title": "CIFP Pau Casesnoves",
  "type": "object",

  "properties": {
    "cifp": {
      "type": "object",
      "properties": {
        "alumne": {
          "type": "array",
          "items": { "$ref": "#/$defs/alumne" }
        },
        "professor": {
          "type": "array",
          "items": { "$ref": "#/$defs/professor" }
        }
      },
      "additionalProperties": false
    }
  },

  "required": ["cifp"],

  "$defs": {
    "personaComuna": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "nom": { "type": "string" },
        "llinatges": { "type": "string" },
        "data_naixement": { "type": "string" },
        "correu": { "type": "string" },
        "telefon": { "type": "string" },
        "adreça": { "type": "string" }
      },
      "required": ["id", "nom", "llinatges"]
    },

    "alumne": {
      "type": "object",
      "allOf": [
        { "$ref": "#/$defs/personaComuna" },
        {
          "type": "object",
          "properties": {
            "data_matricula": { "type": "string" },
            "curs": {
              "type": "string",
              "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
            }
          },
          "required": ["data_matricula", "curs"]
        }
      ]
    },

    "professor": {
      "type": "object",
      "allOf": [
        { "$ref": "#/$defs/personaComuna" },
        {
          "type": "object",
          "properties": {
            "data_incorporació": { "type": "string" },
            "departament": {
              "type": "string",
              "enum": ["Informàtica", "Electricitat", "Automoció"]
            },
            "assignatura": {
              "type": "array",
              "items": { "$ref": "#/$defs/assignatura" }
            }
          },
          "required": ["data_incorporació", "departament"]
        }
      ]
    },

    "assignatura": {
      "type": "object",
      "properties": {
        "id_assignatura": { "type": "integer" },
        "nom_assignatura": { "type": "string" },
        "cicle": {
          "type": "string",
          "enum": ["DAM", "DAW", "ASIX", "SMX", "SEIA", "ER", "AUT"]
        },
        "data_inici": { "type": "string" },
        "data_final": { "type": "string" }
      },
      "required": ["id_assignatura", "nom_assignatura", "cicle"]
    }
  }
}